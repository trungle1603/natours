extends base

block content  
	main.main
		.login-form
			h2.heading-secondary.ma-bt-lg Sign Up
			form.form.form--signup
				.form__group
					label.form__label(for='name') Name
					input#name.form__input(type='name', required)
				.form__group
					label.form__label(for='email') Email
					input#email.form__input(type='email', required)
				.form__group.ma-bt-md
					label.form__label(for='password') Password
					input#password.form__input(type='password', required, minlength='8')
				.form__group.ma-bt-md
					label.form__label(for='passwordConfirm') PasswordConfirm
					input#passwordConfirm.form__input(type='password', required, minlength='8')
				.form__group
					button.btn.btn--green Sign Up